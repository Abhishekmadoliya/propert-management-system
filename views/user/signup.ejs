<% layout("layouts/boilerplate")%>
<div class="row mt-3">
    <h2 class=" col-6 offset-3">SignUp for Hostals</h2>
  <div class="col-6 offset-3">
    <form action="/signup" method="post" class="needs-validation" novalidate>

        <div class="mb-3 ">
            <label for="username" class="form-lable"> Enter Username:</label>
            <input
              type="text"
              placeholder="Enter username"
              id="username"
              name="username"
              class="form-control"
              required
            />
            <div class="valid-feedback">
            Looks Great!
            </div>
          </div>


          <div class="mb-3 ">
            <label for="email" class="form-lable"> Enter Email:</label>
            <input
              type="text"
              placeholder="Enter Email"
              id="email"
              name="email"
              class="form-control"
              required
            />
            <div class="valid-feedback">
            Looks Great!
            </div>
          </div>

          <div class="mb-3 ">
            <label for="password" class="form-lable"> Enter Password:</label>
            <input
              type="password"
              placeholder="Enter Password"
              id="password"
              name="password"
              class="form-control"
              required
            />
            <div class="valid-feedback">
            Looks Great!
            </div>
          </div>


<button class="btn btn-success">SignUp</button>
    </form>

  </div>
</div>
